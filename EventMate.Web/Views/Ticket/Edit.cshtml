@model TicketDto
@{
    ViewData["Title"] = "Edit Ticket";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1>Edit Ticket</h1>
            <hr />
            <form method="post">
                <div class="form-group">
                    <label for="user">Ticket Name</label>
                    <input type="text" id="user" name="user" class="form-control" value="@Model.User" />

                    <label for="event">Ticket Name</label>
                    <input type="text" id="event" name="event" class="form-control" value="@Model.Event" />

                    <label for="tckNum">Ticket Name</label>
                    <input type="text" id="tckNum" name="tckNum" class="form-control" value="@Model.IdentifiedTicketNumber" />

                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" asp-controller="Ticket" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>