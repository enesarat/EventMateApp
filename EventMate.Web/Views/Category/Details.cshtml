@model CategoryDto
@{
    ViewData["Title"] = "Category Detail";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1>Category Details</h1>
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
            </dl>

            <a asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-controller="Category" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>